<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.employstream.applicantkioske.Fragments.AddWorkHistoryFragment"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:text="Work History"
            android:textColor="#fff"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/postition_input"
                    android:hint="Job Position Title"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:id="@+id/email_input"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/company_input"
                    android:hint="Company"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/city_input"
                    android:hint="City"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/state_input"
                    android:hint="State"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.TextInputLayout"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:padding="5dp">
            <android.support.design.widget.TextInputEditText
                style="@style/Widget.TextEdit"
                android:id="@+id/job_responsibilities_input"
                android:hint="Job Responsibilities"
                android:inputType="textMultiLine"
                android:gravity="top|left"
                android:lines="6"
                android:minLines="6" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:text="Timeframe"
            android:textColor="#fff"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/state_date_input"
                    android:hint="Start Date"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/end_date_input"
                    android:hint="End Date"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.TextInputLayout"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:padding="5dp">
            <android.support.design.widget.TextInputEditText
                style="@style/Widget.TextEdit"
                android:id="@+id/reason_for_leaving_input"
                android:hint="Reason for leaving"
                android:inputType="textMultiLine"
                android:gravity="top|left"
                android:lines="6"
                android:minLines="6"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:text="Hourly Wages"
            android:textColor="#fff"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/starting_wage_input"
                    android:hint="Starting Wage"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/ending_wage_input"
                    android:hint="Ending Wage"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:text="Supervisor Info"
            android:textColor="#fff"
            android:layout_marginTop="50dp"/>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.TextInputLayout"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <android.support.design.widget.TextInputEditText
                style="@style/Widget.TextEdit"
                android:id="@+id/supervisor_name_input"
                android:hint="Supervisor Name"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/supervisor_phone_input"
                    android:hint="Supervisor Pgone"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/can_we_contact_input"
                    android:hint="Can we contact?"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:text="Temporary Job?"
            android:textColor="#fff"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/through_staffing_input"
                    android:hint="Worked through a staffing firm?"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/name_staffing_input"
                    android:hint="Name of staffing firm"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

