<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.employstream.applicantkioske.MainActivity"
    android:id="@+id/screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>

        <android.support.v7.widget.CardView
            android:id="@+id/email_login_form"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ViewSwitcher
                    android:layout_marginTop="15dp"
                    android:id="@+id/switcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inAnimation="@anim/fadein"
                    android:outAnimation="@anim/fadeout" >

                    <ImageView
                        android:id="@+id/imgOne"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/loginlogonew" />

                    <ImageView
                        android:id="@+id/imgTwo"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/loginlogonew" />
                </ViewSwitcher>

                <EditText
                    android:id="@+id/customerCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Customer Code"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textSize="50sp"
                    android:singleLine="true" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>
</LinearLayout>