<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.employstream.applicantkioske.Fragments.AddEducationHistoryFragment"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:text="Education History"
            android:textColor="#fff"
            android:layout_marginTop="50dp"/>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.TextInputLayout"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:padding="5dp">
            <android.support.design.widget.TextInputEditText
                style="@style/Widget.TextEdit"
                android:id="@+id/school_input"
                android:hint="School"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.TextInputLayout"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:padding="5dp">
            <android.support.design.widget.TextInputEditText
                style="@style/Widget.TextEdit"
                android:id="@+id/degree_input"
                android:hint="Degree"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.TextInputLayout"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:padding="5dp">
            <android.support.design.widget.TextInputEditText
                style="@style/Widget.TextEdit"
                android:id="@+id/concentration_input"
                android:hint="Concentration"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/city_input"
                    android:hint="City"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/state_input"
                    android:hint="State"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/did_you_complete_input"
                    android:hint="Did you complete?"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.TextInputLayout"
                android:layout_marginTop="12dp"
                android:layout_weight=".50"
                android:padding="5dp">
                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.TextEdit"
                    android:id="@+id/final_year_input"
                    android:hint="Final Year"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
